@page "/Hero/{id:int}"
@inject IMyHero_Service MyHero_Service
<h3>Hero</h3>

@if(hero ==null)
            {
                <span>Hero is loading....</span>
            }
            else
            {
                <h3>this is @hero.HeroName, also called @hero.FirstName @hero.LastName.</h3>
                <span>This here belongs to @hero.Comic.Name</span>

            }
@code {
    [Parameter]
    public int id { get; set; }
    

    BlazorWebAssemblyApp.Shared.MyHeros hero = null;


    protected  async override Task OnInitializedAsync()
    {
        hero =   await MyHero_Service.Getherobyid(id);

    }

}
